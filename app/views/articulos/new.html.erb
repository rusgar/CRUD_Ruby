<h2>Anadir articulo </h2>

<%= form_with model: @articulo do | form| %>
 <% @articulo.errors.full_messages.each do |error| %>
   <div>
        <%= error %>
   </div>
 <% end %>
 <div>
   <%= form.label :title %>
   <%= form.text_field :title  %>
 </div>

 <div>
   <%= form.label :description  %>
   <%= form.text_area :description %>
 <div>
   <%= form.label :price %>
   <%= form.number_field :price %>
 </div>
 <%= form.submit %> 
<% end %>